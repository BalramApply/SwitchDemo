<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwitchDemo.MainPage"
             BackgroundColor="pink">

    <ScrollView>
        <HorizontalStackLayout Spacing="20">
            <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                <Label Text="Show Background" FontSize="20" FontAttributes="Bold"/>
                <Switch Rotation="-90" IsToggled="true" VerticalOptions="Center" Toggled="ToggleBorder"
                        WidthRequest="50"/>
                <Label Text="Hide Backgrounnd" FontSize="20" FontAttributes="Bold"/>
                <Image x:Name="imgBot" Source="dotnet_bot.png"  BackgroundColor="LightSkyBlue"
       HeightRequest="200" WidthRequest="200"/>
            </VerticalStackLayout>
            
        </HorizontalStackLayout>
        
    </ScrollView>

</ContentPage>
